{
  "name": "mikeheddes-website",
  "version": "1.0.0",
  "author": "Mike Heddes",
  "description": "My portfolio website",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "functions",
    "src"
  ],
  "repository": "https://github.com/mikeheddes/mikeheddes-website.git",
  "scripts": {
    "start": "cd ./functions && npm run start:dev",
    "start:prod": "cd ./functions && npm run start:prod",
    "lint": "cd ./functions && npm run lint && cd ../src && npm run lint",
    "build": "npm run build:prod",
    "build:prod": "cd ./src && npm run build:prod",
    "build:dev": "cd ./src && npm run build",
    "build:dll": "cd ./src && npm run build:dll",
    "modules": "npm run modules:yarn",
    "modules:npm": "npm i && cd ./functions && npm i && cd ../src && npm i",
    "modules:yarn": "yarn install && cd ./functions && yarn install && cd ../src && yarn install",
    "clean:modules": "rm -rf ./functions/node_modules && rm -rf ./src/node_modules"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "prettier": "^1.13.7",
    "stylelint": "^9.4.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.2",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-promise": "^3.8.0",
    "express": "^4.16.3",
    "webpack": "^4.16.3",
    "webpack-cli": "^3.1.0",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.3",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-plugin-transform-react-inline-elements": "^6.22.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.13",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.2",
    "file-loader": "^1.1.11",
    "imagemin-webpack-plugin": "^2.2.0",
    "remark-highlight.js": "^5.0.0",
    "responsive-loader": "^1.1.0",
    "sharp": "^0.20.5",
    "webpack-manifest-plugin": "^2.0.3"
  }
}